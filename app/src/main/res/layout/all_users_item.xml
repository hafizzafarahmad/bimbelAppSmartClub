<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="10dp"
                android:id="@+id/all_userprofile"
                android:padding="8dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/all_userprofile"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/all_name"
                    android:text="@string/text_nama"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/all_ni"
                    android:text="ni"/>

                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/all_pengajar"
                    android:text="Mengajar"/>





            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="7dp">

                <ImageButton
                    android:id="@+id/add_studentlist_btn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/white_rounded_button"
                    android:src="@drawable/ic_addblack"
                    android:visibility="gone"/>

                <ImageButton
                    android:id="@+id/delete_student_btn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/white_rounded_button"
                    android:src="@drawable/ic_deleteblack"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/hadir_btn"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:text="Hadir"
                    android:textAllCaps="false"
                    android:background="@drawable/white_rounded_button"
                    android:visibility="gone"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/class_name"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"/>

                <ImageButton
                    android:src="@drawable/ic_delete"
                    android:id="@+id/delete_btn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/colorWhite"
                    android:visibility="gone"/>

            </LinearLayout>

        </RelativeLayout>



    </android.support.v7.widget.CardView>



</FrameLayout>